# Photolog 환경변수 예제 파일
# 실제 사용 시 backend/.env 파일에 설정하세요

# ===========================================
# 데이터베이스 설정
# ===========================================

# 데이터베이스 타입 선택 (mysql 또는 nosql)
DATABASE_TYPE=mysql

# MySQL 설정 (DATABASE_TYPE=mysql 사용 시)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_database_name

# ===========================================
# 스토리지 설정
# ===========================================

# 스토리지 타입 (OCI 또는 LOCAL)
STORAGE_TYPE=OCI

# OCI Object Storage 설정
OCI_NAMESPACE=your-oci-namespace
OCI_BUCKET_NAME=photolog-storage
OCI_REGION=ap-chuncheon-1

# NoSQL Database 설정 (DATABASE_TYPE=nosql 사용 시)
NOSQL_COMPARTMENT_ID=your-compartment-id
NOSQL_TABLE_NAME=photos

# ===========================================
# 인증 설정
# ===========================================

# JWT 시크릿 키
SECRET_KEY=your-secret-key-here

# 텔레그램 봇 설정
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# 허용된 이메일 (인증용)
ALLOWED_EMAIL=admin@photolog.app

# ===========================================
# 기타 설정
# ===========================================

# 디버그 모드
DEBUG=false

# 서버 포트
PORT=8001